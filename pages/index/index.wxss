.tabbar {
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    min-height: 100rpx;
    padding-bottom: 20rpx;
    display: flex;
    justify-content: space-around;
    z-index: 1024;
}
.tabbar .action {
    flex: 1;
    text-align: center;
}

.tabbar .action .icon-image {
    margin-bottom: 10rpx;
}

.tabbar .action .icon-image image {
    width: 50rpx;
    height: 50rpx;
}
.has-share .close {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    right: 20rpx;
    top: 20rpx;
}
.has-share .btn{
    width: 40%;
    height: 70rpx;
    overflow: hidden;
    position: relative;
    margin: 20rpx auto;
}
.has-share .btn .btn-img {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
}