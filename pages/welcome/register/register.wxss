/* pages/register.wxss */

page {
  position: relative;
  height: 100vh;
  width: 100%;
  overflow: hidden;
  background-color: #27201a;
  
}


.page_container{
  position: relative;
  height: 100vh;
  width: 100%;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.home-bg {
  position: absolute;
  z-index: -1;
  height: 100vh;
  width: 100vw;
}

.content {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}


.header-title {
  margin-top:2rem;
  color: #ffffff;
  font-size: 16px;
}


.btn-item {
  position: relative;
  display: flex;
  flex-direction: column;
  width: 300rpx!important;
  height: 80rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-top: 48rpx;
  background-color: transparent;
  box-sizing: border-box;
  padding: 0;
  align-items: center;
  justify-content: center;
  border-radius: 0.7rem;
  color: #553e38;
}

.btn-item:active {
  transform: scale(1.01);
}

.btn-item__bg {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
  border-radius: 0.7rem;
}