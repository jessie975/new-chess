.container {
    width: 90%;
    margin: 40rpx auto;
    background: rgba(132, 120, 90, 0.4);
    padding: 30rpx;
}

.container>view {
    display: flex;
    justify-content: space-between;
}

.container .input {
    background: rgba(0, 0, 0, 0.2);
    border-radius: 5rpx;
    flex: 1;
}

.container .textarea {
    height: 150rpx;
    padding: 10rpx 30rpx;
}

.container .people-number {
    align-items: center;
}

.container .password-btn {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    border: 2px solid #CDB68A;
    position: relative;
}

.container .can-password {
    width: 25rpx;
    height: 25rpx;
    border-radius: 50%;
    background-color: #CDB68A;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
}

.container .people-number .number {
    display: flex;
    height: 48rpx;
    overflow: hidden;
    align-items: center;
}

.people-number__text{
    font-size: 34rpx;
    color: #fff;
    margin-right: 64rpx;
}

.people-sub, .people-add {
    background-color: #857b60;
    color: #e9dcbc;
    height: 48rpx;
    width: 48rpx;
    border: 1px solid #e9dcbc;
    border-radius: 18rpx;
    text-align: center;
    line-height: 48rpx;
    font-size: 48rpx;
    font-weight: 600;
    box-sizing: border-box;
}

.people-sub {
    margin-right: 24rpx;
}

.people-add {
    margin-right: 36rpx;
}

.people-apply {
    color: #e9dcbc;
    font-size: 28rpx;
}

.container .people-number image {
    width: 35rpx;
    height: 35rpx;
}

.container .can-switch {
    align-items: flex-end;
}

.container .switch switch {
    transform: scale(0.8);
}

.can-watch-box {
    border: 2px solid #CDB68A;
}

.no-watch-box {
    border: 2px solid #84775A;
}

.container .switch-btn {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
}

.can-watch-btn {
    background-color: #CDB68A;
    margin-left: 5rpx;
}

.no-watch-btn {
    background-color: #84775A;
    margin-left: 58rpx;
}

.container .host,
.container .custom {
    justify-content: space-around;
}

.container .time {
    padding: 10rpx 30rpx;
}

.choose-border {
    border: 1px solid #CDB68A;
    border-radius: 10rpx;
}

.submit {
    padding: 20rpx;
}