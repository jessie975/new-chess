.container {
    width: 90%;
    margin: 40rpx auto;
    background: rgba(132, 120, 90, 0.4);
}

.row {
    width: 100%;
}

.f-title {
    width: 148rpx;
}

.row > input {
    height: 52rpx;
    line-height: 52rpx;
    background: rgba(200, 200, 200, 0.2);
    border-radius: 5rpx;
    flex: 1;
    padding: 0 20rpx;
}

.row > textarea {
    height: 200rpx;
    line-height: 52rpx;
    background: rgba(200, 200, 200, 0.2);
    border-radius: 5rpx;
    flex: 1;
    padding: 8rpx 20rpx;
}

