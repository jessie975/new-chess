.content {
    width: 90%;
    margin: 40rpx auto;
}
.content .card {
    width: 320rpx;
    height: 198rpx;
    position: relative;
    border-radius: 10rpx;
    overflow: hidden;
    padding: 10rpx;
}
.content .card .card-bg {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    z-index: -999;
}
.card .time {
    width: 100%;
}
.card .teacher .avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    overflow: hidden;
}
.card .teacher .avatar .img {
    width: 100%;
    height: 100%;
}