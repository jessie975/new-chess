.container {
    width: 90%;
    margin: 40rpx auto;
    background: rgba(132, 120, 90, 0.4);
}
.container .input {
    width: 80%;
    height: 52rpx;
    line-height: 52rpx;
    background: rgba(200, 200, 200, 0.2);
    border-radius: 5rpx;
}
.container .input input{
    width: 100%;
    height: 100%;
    line-height: 100%;
    padding: 0 20rpx;
}
.submit {
    padding: 20rpx;
    position: absolute;
    bottom: 60rpx;
    left: 50%;
    transform: translateX(-50%);
}