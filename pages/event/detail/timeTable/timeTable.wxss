@import '/style/main.wxss';

.header {
    width: 90%;
    margin: 0 auto;
}
.content {
    width: 85%;
    margin: 20rpx auto;
}

.content .item {
    width: 290rpx;
    height: 315rpx;
    position: relative;
    border-radius: 20rpx;
    overflow: hidden;
}

.item .bg-img, .footer .btn image {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    z-index: -999;
}

.item .player {
    position: absolute;
    width: 100%;
    height: 100rpx;
    left: 0;
    padding: 10rpx 20rpx;
}
.item .one {
    top: 0;
    background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0));
}
.item .two {
    bottom: 0;
    background: linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.5));
}
.player .avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    overflow: hidden;
}
.player .avatar image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.footer {
    width: 100%;
    position: fixed;
    left: 50%;
    bottom: 0;
    transform: translateX(-50%);
    padding: 30rpx;
}
.footer .btn {
    width: 165rpx;
    height: 65rpx;
    line-height: 65rpx;
    overflow: hidden;
    position: relative;
}